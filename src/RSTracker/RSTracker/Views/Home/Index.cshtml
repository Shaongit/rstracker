@model IEnumerable<RSTracker.Models.Requisition>

   <!-- Breadcrumbs-->
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="#">Home</a>
    </li>
    <li class="breadcrumb-item active">Dashboard</li>
</ol>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Dep.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Designation.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Div.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Emp.Name)
